<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>shadow.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
    <object-name>shadownoze</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
    <object-name>shadownoze</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
    <object-name>shadownoze</object-name>
  </effect>
  
  <animation>
    <type>select</type>
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
    <object-name>shadownoze</object-name>
    <condition>
      <and>
        <not><property>sim/freeze/replay-state</property></not>
        <not><property>sim/rendering/shadows/enabled</property></not>
      </and>
    </condition>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <animation>
    <name>AllShadow</name>
    <object-name>shadowfuselage</object-name>
    <object-name>shadowrotor</object-name>
    <object-name>shadownoze</object-name>
  </animation>

  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>orientation/pitch-deg</property>
    <factor> -1 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>AllShadow</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
    <object-name>AllShadow</object-name>
    <!-- position/gear-agl-m -->
   <property>sim/multiplay/generic/float[2]</property>
   <factor> -1 </factor>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>

  <animation>
    <type>rotate</type>
    <object-name>shadowrotor</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
    <center>
      <x-m> -2.508 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>shadownoze</object-name>
    <condition>
      <equals>
        <property>/sim/model/superfrelon/radarnoze</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
</PropertyList>
